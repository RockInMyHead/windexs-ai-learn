{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["jest", "jsdom", "@types/jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@/components/*": ["../src/components/*"],
      "@/utils/*": ["../src/utils/*"],
      "@/pages/*": ["../src/pages/*"],
      "@/contexts/*": ["../src/contexts/*"],
      "@/hooks/*": ["../src/hooks/*"],
      "@/lib/*": ["../src/lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "../dist"
  ]
}
